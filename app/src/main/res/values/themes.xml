<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookAppJava" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="primary_button_background" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/header</item>
        <item name="cornerRadius">4dp</item>
        <item name="elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/yellow</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:padding">14sp</item>
        <item name="android:textSize" tools:ignore="DuplicateDefinition">16sp</item>
    </style>
</resources>